import pandas as pd
import numpy as np
from langdetect import detect
from langdetect.lang_detect_exception import LangDetectException

data = pd.read_csv('youtube_comments.csv')

def karakteristik_dataset(df):
    print(f"Jumlah Fitur (Kolom): {df.shape[1]}")
    print(f"Jumlah Data (Baris): {df.shape[0]}")
    print(f"Komentar Duplikat: {df.duplicated().sum()}")
    print(f"Komentar Kosong: {df.isnull().sum().sum()}")

karakteristik_dataset(data)
